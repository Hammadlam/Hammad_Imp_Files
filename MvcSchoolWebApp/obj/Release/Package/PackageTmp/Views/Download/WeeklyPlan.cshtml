                            @*<div class="radio i-checks myradio"><label> <input type="radio" value="Individual-Task" name="rd" checked > Individual Task </label></div>
                                <div class="radio i-checks myradio"><label> <input type="radio" value="Pair-Work" name="rd" > Pair Work </label></div>
                                <div class="radio i-checks myradio"><label> <input type="radio" value="Group-Work" name="rd"> Group Work </label></div>*@

                            <label> <input type="radio" name="rd" value="Individual-Task" style="display:inline" checked> Individual Task </label> <br>
                            <label><input type="radio" name="rd" value="Pair-Work" style="display:inline"> Pair Work </label> <br>
                            <label><input type="radio" name="rd" value="Group-Work" style="display:inline"> Group Work </label>

                        </div>

                    </div>
                    <div class="col-md-4">
                        <div class="col-md-5">
                            <label> Time Break-up </label>
                        </div>
                        <div class="col-md-7">
                            @Html.DropDownListFor(m => m.rd_time_break_id, Model.rd_time_break, "Time Break", new { @class = "form-control m-b", @name = "tb_readdisc", @id = "tb_readdisc", @required = true })
                        </div>
                    </div>
                </div>

                <br />

                <div class="row ">
                    <div class="col-md-8">
                        <div class="col-md-2">
                            <label> Written Work </label>
                        </div>
                        <div class="col-md-10" id="custom-textarea">
                            @Html.TextAreaFor(m => m.writtenwork, new { @class = "form-control m-b", @name = "txtWorkWP", @id = "txtWorkWP", @required = true, @style = "resize:vertical" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="col-md-5">
                            <label> Time Break-up </label>
                        </div>
                        <div class="col-md-7">
                            @Html.DropDownListFor(m => m.ww_time_break_id, Model.ww_time_break, "Time Break", new { @class = "form-control m-b", @name = "tb_writtenwork", @id = "tb_writtenwork", @required = true })
                        </div>
                    </div>
                </div>

                <br />

                <div class="row ">
                    <div class="col-md-8">
                        <div class="col-md-2">
                            <label> Wrap up </label>
                        </div>
                        <div class="col-md-10" id="custom-textarea">
                            @Html.TextAreaFor(m => m.wrapup, new { @class = "form-control m-b", @name = "txtWrapWP", @id = "txtWrapWP", @required = true, @style = "resize:vertical" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="col-md-5">
                            <label> Time Break-up </label>
                        </div>
                        <div class="col-md-7">
                            @Html.DropDownListFor(m => m.wu_time_break_id, Model.wu_time_break, "Time Break", new { @class = "form-control m-b", @name = "tb_wrapup", @id = "tb_wrapup", @required = true })
                        </div>
                    </div>
                </div>

                <br />

                <div class="row ">
                    <div class="col-md-9" id="txtevaluation">
                        <div class="col-md-5  col-md-offset-2">
                            <label> Evaluation of Students' Learning </label>
                            @Html.TextAreaFor(m => m.evaluationstdid, new { @class = "form-control m-b", @name = "txtStudentLearnWP", @id = "txtStudentLearnWP",  @style = "resize:vertical" })
                        </div>
                        <div class="col-md-5">
                            <label> Evaluation of Teaching </label>
                            @Html.TextAreaFor(m => m.evaluationteacherid, new { @class = "form-control m-b", @name = "txtTeachingWP", @id = "txtTeachingWP",  @style = "resize:vertical" })

                        </div>
                    </div>
                </div>

                <br />

                <div class="row">
                    <div class="col-md-8">
                        <div class="col-md-2">
                            <label>
                                Principal Comments @{ 
                                    var user_dtl = HttpContext.Current.Session["User_Dtl"] as List<MvcSchoolWebApp.Models.Users>;
                                    if (user_dtl[0].user_earea == "1000" || user_dtl[0].user_earea == "2000")
                                    { <label> (Previous) </label> } }
                            </label>
                        </div>
                        <div class="col-md-10" id="custom-textarea">
                            @Html.TextAreaFor(m => m.princ_comments, new { @class = "form-control m-b", @name = "txtCommentsWP", @id = "txtCommentsWP", @style = "resize:vertical", @readonly = true })
                        </div>
                    </div>
                </div>

                <br />
                @{
                    if (user_dtl[0].user_earea == "1000" || user_dtl[0].user_earea == "2000")
                    {
                        <div class="row">
                            <div class="col-md-8">
                                <div class="col-md-2">
                                    <label> New Comment </label>
                                </div>
                                <div class="col-md-10" id="custom-textarea">
                                    @Html.TextAreaFor(m => m.princ_comments_new, new { @class = "form-control m-b", @name = "txtCommentsnewWP", @id = "txtCommentsnewWP", @required = true, @style = "resize:vertical" })
                                </div>
                            </div>
                        </div>
                    }

                }
                <br />

                <div class="row">
                    <div class="col-md-8">
                        <div class="col-md-10 col-md-offset-2" id="custom-textarea">
                            <input id="btnviewdown" type="submit" value="Submit" name="btnsubmit" class="btn btn-sm btn-danger" />
                        </div>
                    </div>
                </div>
                @*</form>*@
            </div>
            </div>
            }
</section>



