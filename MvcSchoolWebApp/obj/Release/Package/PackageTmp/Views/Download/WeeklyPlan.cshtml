                                                </button>
                                        </div>
                                    </div>
                                    
                                </div>*@
                            @*</form>*@
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
   
        <div class="ibox-content">
            <div class="row">
                <div class="row">
                    <div class="col-md-9">
                        <div class="col-md-2">
                            <label>Teacher Name</label>
                        </div>
                        <div class="col-md-9" id="txttopicwlp">
                            @Html.DropDownListFor(m => m.studentid, Model.student, new { @class = "form-control m-b", @name = "txtteacherWP", @id = "txtteacherWP", @placeholder = "Teacher ID", @required = true, @readonly = true })
                            @*@Html.TextBoxFor(m => m.teachername, new { @class = "form-control m-b", @name = "txtteacherWP", @id = "txtteacherWP", @placeholder = "Teacher ID", @required = true, @readonly = true })*@

                        </div>
                    </div>

                </div>

                <div class="row">
                    <div class="col-md-9">
                        <div class="col-md-2">
                            <label>Topic</label>
                        </div>
                        <div class="col-md-9" id="txttopicwlp">
                            @Html.TextBoxFor(m => m.topic, new { @class = "form-control m-b", @name = "txtTopicWP", @id = "txtTopicWP", @placeholder = "Topic", @required = true })
                        </div>
                    </div>
                </div>

                <div class="row ">
                    <div class="col-md-8">
                        <div class="col-md-2">
                            <label>Objective</label>
                        </div>
                        <div class="col-md-10" id="custom-textarea">
                            @Html.TextAreaFor(m => m.objective, new { @class = "form-control m-b", @name = "txtObjectWP", @id = "txtObjectWP", @required = true, @style = "resize:vertical" })
                        </div>


                    </div>
                </div>

                <div class="row">

                    <div class="col-md-8">
                        <div class="col-md-2">
                            <label> Resource </label>
                        </div>
                        <div class="col-md-10" id="txtresourcewlp">
                            @Html.TextBoxFor(m => m.resource, new { @class = "form-control m-b", @name = "txtResourceWP", @id = "txtResourceWP", @placeholder = "Resource", @required = true })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-8">
                        <div class="col-md-2">
                            <label> Evaluation </label>
                        </div>
                        <div class="col-md-10" id="custom-textarea">
                            @Html.TextAreaFor(m => m.evaluation, new { @class = "form-control m-b", @name = "txtEvalutionWP", @id = "txtEvalutionWP", @required = true, @style = "resize:vertical" })
                        </div>
                    </div>
                    @*<div class="col-md-4">
                            <div class="col-md-5">
                                <label> Time Break-up </label>
                            </div>
                            <div class="col-md-7">
                                @Html.DropDownListFor(m => m.eval_time_break_id, Model.eval_time_break, "Time Break", new { @class = "form-control m-b", @name = "tb_evaluation", @id = "tb_evaluation", @required = true })
                            </div>
                        </div>*@
                </div>

                <div class="row">
                    <div class="col-md-8">
                        <div class="col-md-9 col-md-offset-3" id="txtdemoclass">
                            <h3>Teaching Methodology</h3>
                            @*<div class="radio i-checks myradio"><label> <input type="radio" value="Recap" name="Methodology" checked> Recap </label></div>
                                <div class="radio i-checks myradio"><label> <input type="radio" value="Eliciting" name="Methodology"> Eliciting </label></div>
                                <div class="radio i-checks myradio"><label> <input type="radio" value="Brain Storming" name="Methodology"> Brain Storming </label></div>*@

                            <label> <input type="radio" name="Methodology" value="Recap" style="display:inline" checked>  Recap </label> <br>
                            <label><input type="radio" name="Methodology" value="Eliciting" style="display:inline"> Eliciting </label> <br>
                            <label><input type="radio" name="Methodology" value="Brain-Storming" style="display:inline"> Brain Storming </label>

                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="col-md-5">
                            <label> Time Break-up </label>
                        </div>
                        <div class="col-md-7">
                            @Html.DropDownListFor(m => m.tm_time_break_id, Model.tm_time_break, "Time Break", new { @class = "form-control m-b", @name = "tb_teachmethod", @id = "tb_teachmethod", @required = true })
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-8">
                        <div class="col-md-9 col-md-offset-3" id="txtdemoclass">
