                                            <label>Class/Level</label>
                                        </div>
                                        <div class="col-md-7">
                                            @Html.DropDownListFor(m => m.classesid, Model.classes, "Class/Level", new { @class = "form-control m-b", @name = "txtClassWP", @id = "txtClassWP", @required = true })
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="col-md-5">
                                            <label>Section</label>
                                        </div>
                                        <div class="col-md-7">
                                            @Html.DropDownListFor(m => m.sectionid, Model.section, "Section", new { @class = "form-control m-b", @name = "txtSectionWP", @id = "txtSectionWP", @required = true })

                                        </div>
                                    </div>
                                </div>

                                <div class="row ">
                                    <div class="col-md-4">
                                        <div class="col-md-5">
                                            <label for="txtSubjectDI">Subject</label>
                                        </div>
                                        <div class="col-md-7">
                                            @Html.DropDownListFor(m => m.subjectid, Model.subject, "Subject", new { @class = "form-control m-b", @name = "txtSubjectWP", @id = "txtSubjectWP", @required = true })
                                        </div>


                                    </div>
                                    <div class="col-md-4">
                                        <div class="col-md-5">
                                            <label>Date</label>
                                        </div>
                                        <div class="col-md-7">
                                            @*@Html.DropDownListFor(m => m.week, Model.weeklist, "Week", new { @class = "form-control m-b", @name = "txtWeekWP", @id = "txtWeekWP", @required = true })*@
                                            @Html.TextBoxFor(model => model.begdate, "Date", new { @Value = ViewBag.date, @class = "date-day form-control m-b", @name = "txtbegdateWP", @id = "txtbegdateWP", @required = true })
                                            @*@Html.TextBoxFor(m => m.week, new { @class = "form-control m-b", @name = "txtWeekWP", @id = "txtWeekWP", @placeholder = "Week", @required = true })*@

                                        </div>
                                    </div>
                                    <div class="col-md-4">

                                        <div class="col-md-3 pull-right">
                                            <button type="submit" class="btn btn-danger" id="btn-editlesson">
                                                <i class="fa fa-edit"></i>
                                            </button>
                                        </div>
                                        @*<div class="col-md-5">
                                            <label>To Date</label>
                                        </div>
                                        <div class="col-md-7">
                                            @Html.TextBoxFor(model => model.enddate, "Date", new { @Value = DateTime.Now.ToString("dd-MMMM-yyyy"), @class = "date-day form-control m-b", @name = "txtenddateWP", @id = "txtenddateWP", @required = true })
                                        </div>*@
                                    </div>

                                </div>

                                @*<div class="row">
