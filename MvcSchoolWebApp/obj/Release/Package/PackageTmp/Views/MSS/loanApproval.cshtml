@model MvcSchoolWebApp.Models.ESSModel
@{
    ViewBag.Title = "loanApproval";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #loancontent{
        max-height: 400px;
        overflow-y: auto;
    }
</style>
<script src=@Url.Content("~/Content/js/loanAppr.js?n=1") asp-append-version="true"></script>

<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div id="dvborder">

                    <div class="ibox-title ">

                        <ul id="vert_menu">
                            <li>
                                <input type="radio" id="r1" name="r">
                                <label for="r1">
                                    Managerial Self Service
                                </label>
                            </li>
                            <li>
                                <input type="radio" id="r2" name="r">
                                <label for="r2">
                                    Loan Approval
                                </label>
                            </li>
                        </ul>
                    </div>

                    <div class="ibox-content" id="loanapp_div">
                        <div class="loanapp_jqGrid m-b">
                            <table id="loanapp_table"></table>
                            <div id="loanapp_pager"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
@using (Html.BeginForm("loanRecommend", "MSS", FormMethod.Post))
{
    <div class="modal inmodal" id="LoanRecodPopup" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
