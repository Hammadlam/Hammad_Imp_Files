                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <label>Employee Id</label>
                                </div>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(model => model.empid, new {@style = "padding:2px;", @class = "form-control m-b", @name = "txtrecEmpid", @id = "txtrecEmpid", @readonly = true })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <label>Request Number</label>
                                </div>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(model => model.recordno, new { @style = "padding:2px;", @class = "form-control m-b", @name = "txtrecloanreqno", @id = "txtrecloanreqno", @readonly = true })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <label>Employee Name</label>
                                </div>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(model => model.empname, new { @style = "padding:2px;", @class = "form-control m-b", @name = "txtrecEmpname", @id = "txtrecEmpname", @readonly = true })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <label>Joining Date</label>
                                </div>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(model => model.joindate, new { @style = "padding:2px;", @class = "form-control m-b", @name = "txtrecloanjoin", @id = "txtrecloanjoin", @readonly = true })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <label>Designation</label>
                                </div>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(model => model.design, new { @style = "padding:2px;", @class = "form-control m-b", @name = "txtrecloandesig", @id = "txtrecloandesig", @readonly = true })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <label>Loan Type</label>
                                </div>
                                <div class="col-md-5">
                                    @Html.DropDownListFor(m => m.loanid, Model.loantyp, new { @class = "form-control m-b", @name = "txtLoantypRecod", @id = "txtLoantypRecod", @required = true, @readonly = true })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <label>Loan Amount</label>
                                </div>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(model => model.loanamt, new { @style = "padding:2px;", @class = "form-control m-b", @name = "txtrecloanAmt", @id = "txtrecloanAmt", @readonly = true })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <label>Start Date</label>
                                </div>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(model => model.begdate, new { @style = "padding:2px;", @class = "form-control m-b", @name = "txtrecloanappbdate", @id = "txtrecloanappbdate", @readonly = true })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <label>End Date</label>
                                </div>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(model => model.lastdate, new { @style = "padding:2px;", @class = "form-control m-b", @name = "txtrecloanappedate", @id = "txtrecloanappedate", @readonly = true })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <label>Send To</label>
                                </div>
                                <div class="col-md-5"> 
                                    @Html.DropDownListFor(m => m.recodid, Model.recodtype, new { @class = "form-control m-b", @name = "txtRecommender", @id = "txtRecommender", @required = true })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <label>Comments</label>
                                </div>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(model => model.coments, "Enter Coments", new { @style = "padding:2px;", @class = "form-control m-b", @name = "txtRecodComments", @id = "txtRecodComments", @required = true })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="row">
                            <div class="col-md-8 col-md-offset-4">
                                <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                                <input type="submit" value="Accept" class="btn btn-primary" name="btnRecsubmit"
                                       id="btnRecsubmit" />
                                <button type="button" class="btn btn-danger" name="btnrecodRecrej" id="btnrecodRecrej">Reject</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

