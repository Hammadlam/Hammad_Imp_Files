@model MvcSchoolWebApp.Models.CompanyDocModel
@{
    ViewBag.Title = "ER Documents";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src=@Url.Content("~/Content/js/ERPDoc.js?n=1") asp-append-version="true"></script>

<section class="content">
    <!-- Info boxes -->
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div id="dvborder">
                    <div class="ibox-title ">
                        <ul id="vert_menu">
                            <li>
                                <input type="radio" id="r1" name="r">
                                <label for="r1">
                                    Corporate Documents
                                </label>
                            </li>
                            <li>
                                <input type="radio" id="r2" name="r">
                                <label for="r2">
                                    ER Documents
                                </label>
                            </li>
                        </ul>
                    </div>
                    <div class="ibox-content" id="erdoc_div">
                        <div class="row">
                            <div class="erdoc_wrapper">
                                <table id="erdoc_grid"></table>
                                <div id="erdoc_pager"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
