@model MvcSchoolWebApp.Models.Timesheetmodal
@{
    ViewBag.Title = "MATimeSheet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content">

    @using (Html.BeginForm("TimeSheetp", "TM", FormMethod.Post))
    {
        <div class="row">
            <div class="col-lg-12 col-sm-12 col-md-12 col-lg-12">


                <div class="ibox float-e-margins">
                    <div id="dvborder">

                        <div class="ibox-title">
                            <h3 class="text-bold text-info">
                                Time Sheet
                            </h3>
                        </div>
                        <div class="ibox-content">
                            <div class="row">
                                <div class="col-md-12"  style="margin-left:5px;">


                                    <div class="col-md-1">
                                        <b class="pull-left input-sm " style="padding-bottom:6px;">Employees</b>
                                    </div>
                                    <div class="col-md-2">
                                        @Html.DropDownList("Employee", (IEnumerable<SelectListItem>)ViewData["Employee"], new { @class = "form-control txtmargins mini pull-left", @id = "Employee", @required = true })
                                    </div>
                                    <div class="col-md-1"> 
                                        <b class="pull-left input-sm " style="padding-bottom:6px;">Clients</b>
                                    </div>
                                    <div class="col-md-2">
                                        @Html.DropDownList("Clients", (IEnumerable<SelectListItem>)ViewData["DBMySkills"], new { @class = "form-control txtmargins mini pull-left", @id = "Clients", @required = true })
                                    </div>
                                </div>
                            </div>
                            <div class="row">

                                <div style="background-color: #ffffff">
                                    <div class="col-md-12" style="margin-top:7px; margin-bottom: 10px; border-top: solid; border-top-color: #0da6ff; border-width: 3px;">
                                        <br />
                                        <div class="row" style="margin-left:5px;">
                                            <div class="col-md-1">
                                                <b class="pull-left input-sm ">Date</b>
                                            </div>
                                            <div class="col-md-2">
                                                <label class="form-control txtmargins input-sm input-hight pull-left"> @DateTime.Now.ToShortDateString()</label>
                                            </div>
                                            <div class="col-md-1">
                                                <b class="pull-left input-sm "> Time</b>
                                            </div>
                                            <div class="col-md-2">
                                                <label class="form-control txtmargins input-sm input-hight pull-left">@DateTime.Now.ToShortTimeString()</label>
                                            </div>

                                        </div>
                                    </div>

                                    <br />
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="row">
                                                <div class="col-md-5">
                                                    <input type="submit" class="btn-success  pull-right input-hight input-sm " name="name" value="Time In" />
                                                </div>
                                                <div class="col-md-6">
                                                    <input type="submit" class="btn-danger  pull-left input-hight input-sm " name="name" value="Time Out" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                    <div style="margin-left: 10px;">

                                    </div>
                                    <div class="row" style="margin-top: 10px; background-color:#c4bdbd; margin-left: 10px; border-top: solid; border-top-color: #c4bdbd; border-width:1px; width: 95%;">
                                        <div class="col-xs-12">

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</section>