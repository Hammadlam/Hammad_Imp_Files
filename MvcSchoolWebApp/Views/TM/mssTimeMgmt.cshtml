@model MvcSchoolWebApp.Models.Timesheetmodal

@{
    ViewBag.Title = "mssTimeMgmt";
}
<head>
    @*<link href="~/Content/bootstrap.min.css?n=1" rel="stylesheet" />*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-timepicker/0.5.2/css/bootstrap-timepicker.min.css"/>
    @*<script src=@Url.Content("~/Content/dbtheme/plugins/jQuery/jquery-2.2.3.min.js?n=1") asp-append-version="true"></script>*@
    @*<script src=@Url.Content("~/Content/dbtheme/bootstrap/js/bootstrap.min.js?n=1") asp-append-version="true"></script>*@
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-timepicker/0.5.2/js/bootstrap-timepicker.min.js"></script>
</head>
<script src=@Url.Content("~/Content/js/TimeSheet.js?n=6") asp-append-version="true"></script>
<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div id="dvborder">
                    <div class="ibox-title ">
                        <ul id="vert_menu">
                            <li>
                                <input type="radio" id="r1" name="r">
                                <label for="r1">
                                    Managerial Self Service
                                </label>
                            </li>
                            <li>
                                <input type="radio" id="r2" name="r">
                                <label for="r2">
                                    Time Management
                                </label>
                            </li>
                        </ul>
                    </div>

                    <div class="ibox-content">
                        <form id="msssubmitattendanceform">
                            <div class="row">
                                <div class="col-md-4">
                                    <label>Employee</label>
                                    @Html.DropDownListFor(m => m.empid, Model.empname, new { @class = "form-control m-b", @name = "txtempnameTS", @id = "txtempnameTS", @required = true })
                                </div>
                                <div class="col-md-4 col-md-offset-1">
                                    <label>Name Of Client</label>
                                    @if (ViewBag.disabletimein == true)
                                    {
                                        @Html.DropDownListFor(m => m.clientid, Model.clientname, new { @class = "form-control m-b", @name = "txtclientnameTS", @id = "txtclientnameTS", @required = true, @disabled = true })
                                    }
                                    else
                                    {
                                        @Html.DropDownListFor(m => m.clientid, Model.clientname, new { @class = "form-control m-b", @name = "txtclientnameTS", @id = "txtclientnameTS", @required = true })
                                    }

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <label>Designation</label>
                                    @Html.TextBoxFor(m => m.empdesignation, new { @class = "form-control m-b", @name = "txtdesigTS", @id = "txtdesigTS", @required = true, @disabled = true })
                                </div>
                                <div class="col-md-4 col-md-offset-1">
                                    <label>Department</label>
                                    @Html.TextBoxFor(m => m.empdepart, new { @class = "form-control m-b", @name = "txtdepartTS", @id = "txtdepartTS", @required = true, @disabled = true })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <label>Date</label>
                                    @Html.TextBoxFor(m => m.date, new { @class = "form-control m-b", @name = "txtdateTS", @id = "txtdateTS", @required = true, @onkeypress = "return false;", @autocomplete = "off" })
                                </div>
                                <div class="col-md-4 col-md-offset-1">
                                    <label>Time</label>
                                    @Html.TextBoxFor(m => m.time, new { @class = "form-control m-b", @name = "txttimeTS", @id = "txttimeTS", @required = true, @onkeypress = "return false;", @autocomplete = "off" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <label>Remarks</label>
                                    @Html.TextAreaFor(m => m.remarks, new { @class = "form-control m-b", @name = "txtremarksTS", @id = "txtremarksTS", @style = "resize:vertical" })
                                </div>
                            </div>

                            <div class="row" style="margin-top:6px;">
                                <div class="col-md-4">
                                    @{
                                        if (ViewBag.disabletimein == true)
                                        {
                                            <input type="submit" id="btntimein" value="Time Out" class="btn btn-sm btn-danger" />
                                            <input type="submit" id="btntimeout" value="Time In" style="display:none;" class="btn btn-sm btn-success" />
                                        }
                                        else
                                        {
                                            <input type="submit" id="btntimein" value="Time Out" style="display:none;" class="btn btn-sm btn-danger" />
                                            <input type="submit" id="btntimeout" value="Time In" class="btn btn-sm btn-success" />
                                        }
                                    }

                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal inmodal" id="empattd_dialogue" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title">Are you sure you want to Continue?</h4>
                </div>
                <div class="modal-footer" style="margin-top:0;">
                    <form id="mssempattd_dialogue_frm" name="popupform" method="post" action="">
                        <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                        <input type="submit" name="submit" value="Proceed" class="btn btn-danger">
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox "  id="empattendance_div">
                <div class="ibox-content" id="empattendance_div">
                    <div class="empattendance_jqGrid m-b">
                        <table id="empattendance_table"></table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
<script type="text/javascript">
        $("#txttimeTS").timepicker();
</script>


