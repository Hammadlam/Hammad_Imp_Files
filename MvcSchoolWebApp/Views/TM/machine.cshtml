@model MvcSchoolWebApp.Models.Timesheetmodal
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*<script src=@Url.Content("~/Content/dbtheme/bootstrap/js/bootstrap-datepicker.js?n=1") asp-append-version="true"></script>*@
@*<script src=@Url.Content("~/Content/js/bootstrap-datetimepicker.min.js") asp-append-version="true"></script>*@


<section class="content">
    <!-- Info boxes -->
    <div class="row">

        <div class="col-lg-12">

            <div class="ibox float-e-margins">
                <div>

                    <div class="ibox-title ">
                        <ul id="vert_menu">
                            <li>
                                <input type="radio" id="r1" name="r">
                                <label for="r1">
                                    Time Management
                                </label>
                            </li>
                            <li>
                                <input type="radio" id="r2" name="r">
                                <label for="r2">
                                    Employee Time Sheet Report (Machine)
                                </label>
                            </li>
                        </ul>
                    </div>

                    <div class="ibox-content">
                        <div class="row">
                            <form role="form" name="viewAttendanceTMRForm" id="viewAttendanceTMRFormMachine">
                                <div class="row ">
                                    @{
                                        try
                                        {
                                            var list = HttpContext.Current.Session["User_Rights"] as List<MvcSchoolWebApp.Models.LoginModel>;
                                            if (list[0].earea.Trim() == "1000")
                                            {
                                                <div class="col-md-4">
                                                    <div class="col-md-5">
                                                        <label>Employee Name</label>
                                                    </div>
                                                    <div class="col-md-7">
                                                        @Html.DropDownListFor(m => m.empid, Model.empname, "Employee", new { @class = "form-control m-b", @name = "txtEmpNameTMR", @id = "txtEmpNameTMR", @required = true })
                                                    </div>
                                                </div>
                                            }
                                        }
                                        catch (Exception)
                                        {

                                            string url = "/dashboard";
                                            Response.Write("<script type='text/javascript'>");
                                            Response.Write("window.location.href = '" + url + "'</script>");
                                            Response.Flush();
                                        }

                                    }
                                    <div class="col-md-4">
                                        <div class="col-md-5">
                                            <label>Pick a Month</label>
                                        </div>
                                        <div class="col-md-7">
                                            @Html.TextBoxFor(model => model.month, "Month", new { @Value = DateTime.Now.ToString("MMMM yyyy"), placeholder = "Month", @class = "date-month form-control m-b", @name = "ViewAttendaceDateTMR", @id = "ViewAttendaceDateTMR", @required = true, @onkeypress = "return false;", @autocomplete = "off" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="col-md-5">
                                            <input id="veiwAttendanceTMR" type="submit" value="Submit" name="btnEnter" class="btn btn-sm btn-default form-submitbtn" />
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox " style="border: 1px solid #d2d6de; display:none;" id="attendanceViewTMRA_div_c">
                <div class="ibox-content">
                    <div class="attendanceViewTMR_jqGrid_c">
                        <table id="attendanceViewTMRA_table_c"></table>
                        <div id="pager_list_TMR"></div>
                    </div>
                    @*@using (Html.BeginForm("CreatePdf", "TM", FormMethod.Post))
                        {*@

                    @try
                    {
                        var list = HttpContext.Current.Session["User_Rights"] as List<MvcSchoolWebApp.Models.LoginModel>;
                        if (list[0].earea.Trim() == "1000")
                        {

                            <div class="row ">
                                <div class="col-md-4">
                                    <div class="col-md-5">
                                        <input id="btn_createreport" type="submit" class="btn btn-danger" name="name" value="Create Report" />
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    catch (Exception)
                    {

                        string url = "/dashboard";
                        Response.Write("<script type='text/javascript'>");
                        Response.Write("window.location.href = '" + url + "'</script>");
                        Response.Flush();
                    }


                </div>
            </div>
        </div>
    </div>
    <div class="modal inmodal" id="empTMRA_dialogue" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title">Are you sure you want to Continue?</h4>
                </div>
                <div class="modal-footer" style="margin-top:0;">
                    <form id="empTMRA_dialogue_frm" name="popupform" method="post" action="">
                        <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                        <input type="submit" name="submit" value="Proceed" class="btn btn-danger">
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<script src=@Url.Content("~/Content/js/TimeSheetReport.js?n=3") asp-append-version="true"></script>