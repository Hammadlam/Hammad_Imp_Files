
@{
    ViewBag.Title = "TimeSheet";
}


<section class="content">

    <div class="row">
        <div class="col-lg-12 col-sm-12 col-md-12 col-lg-12">


            <div class="ibox float-e-margins">
                <div id="dvborder">

                    <div class="ibox-title">
                        <h3 class="text-bold text-info">
                            Time Sheet
                        </h3>

                    </div>


                    <div class="ibox-content">

                        <div class="row">

                            <div style="background-color: #ffffff">
                                <div class="col-md-12" style="margin-top:7px; margin-bottom: 10px; border-top: solid; border-top-color: #0da6ff; border-width: 3px;">

                                    <div class="row" style="margin-top:7px;">
                                        <div class="col-md-5">
                                            <label class="pull-right">Name Of Client</label>
                                        </div>
                                        <div class="col-md-3 pull-left">
                                            @Html.DropDownList("FooBarDropDown", new List<SelectListItem>
                                               {
                                                     new SelectListItem{ Text="Option 1", Value = "1",},
                                                     new SelectListItem{ Text="Option 2", Value = "2" },
                                                     new SelectListItem{ Text="Option 3", Value = "3" },
                                              }, new { @class = "form-control txtmargins mini " })
                                        </div>

                                    </div>
                                    <br />
                                    <div class="row bg-gray-light">
                                        <div class="col-md-2">
                                            <b class="pull-right input-sm ">Date</b>
                                        </div>
                                        <div class="col-md-2">
                                            <label class="form-control txtmargins input-sm input-hight pull-left"> @DateTime.Now.ToShortDateString()</label>
                                        </div>
                                        <div class="col-md-2">
                                            <b class="pull-right input-sm "> Time</b>
                                        </div>
                                        <div class="col-md-2">
                                            <label class="form-control txtmargins input-sm input-hight pull-left">@DateTime.Now.ToShortTimeString()</label>

                                        </div>

                                    </div>
                                </div>

                                <br />
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="row">
                                            <div class="col-md-5">
                                                <input type="button" class="btn-success pull-right input-hight input-sm " name="name" value="Time In" />
                                            </div>
                                            <div class="col-md-6">
                                                <input type="button" class="btn-danger pull-left input-hight input-sm " name="name" value="Time Out" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div style="margin-left: 10px;">

                                </div>
                                <div class="row" style="margin-top: 10px; background-color:#c4bdbd; margin-left: 10px; border-top: solid; border-top-color: #c4bdbd; border-width:1px; width: 95%;">
                                    <div class="col-xs-12">

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</section>