@model MvcSchoolWebApp.Models.Timesheetmodal
@{
    ViewBag.Title = "TimeSheet";
}

<section class="content">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div id="dvborder">
                        <div class="ibox-title ">
                            <ul id="vert_menu">
                                <li>
                                    <input type="radio" id="r1" name="r">
                                    <label for="r1">
                                        Time Management
                                    </label>
                                </li>
                                <li>
                                    <input type="radio" id="r2" name="r">
                                    <label for="r2">
                                        Time Sheet
                                    </label>
                                </li>
                            </ul>
                        </div>

                        <div class="ibox-content">
                            <form id="submitattendanceform">
                                @{
                                    try
                                    {
                                        var list = HttpContext.Current.Session["User_Rights"] as List<MvcSchoolWebApp.Models.LoginModel>;
                                        if (list[0].earea.Trim() == "1000")
                                        {
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <label>Employee</label>
                                                    @Html.DropDownListFor(m => m.empid, Model.empname, new { @class = "form-control m-b", @name = "txtempnameTS", @id = "txtempnameTS", @required = true })
                                                </div>
                                                <div class="col-md-4 col-md-offset-1">
                                                    <label>Name Of Client</label>
                                                    @Html.DropDownListFor(m => m.clientid, Model.clientname, new { @class = "form-control m-b", @name = "txtclientnameTS", @id = "txtclientnameTS", @required = true })
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <label>Designation</label>
                                                    @Html.TextBoxFor(m => m.empdesignation, new { @class = "form-control m-b", @name = "txtdesigTS", @id = "txtdesigTS", @required = true })
                                                </div>
                                                <div class="col-md-4 col-md-offset-1">
                                                    <label>Department</label>
                                                    @Html.TextBoxFor(m => m.empdepart, new { @class = "form-control m-b", @name = "txtdepartTS", @id = "txtdepartTS", @required = true })
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <label>Date</label>
                                                    @Html.TextBoxFor(m => m.date, new { @class = "date-day form-control m-b", @name = "txtdateTS", @id = "txtdateTS", @required = true })
                                                </div>
                                                <div class="col-md-4 col-md-offset-1">
                                                    <label>Time</label>
                                                    @Html.TextBoxFor(m => m.time, new { @class = "form-control m-b", @name = "txttimeTS", @id = "txttimeTS", @required = true })
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <label>Employee</label>
                                                    @Html.DropDownListFor(m => m.empid, Model.empname, new { @class = "form-control m-b", @name = "txtempnameTS", @id = "txtempnameTS", @required = true, @disabled = true })
                                                </div>
                                                <div class="col-md-4 col-md-offset-1">
                                                    <label>Name Of Client</label>
                                                    @Html.DropDownListFor(m => m.clientid, Model.clientname, new { @class = "form-control m-b", @name = "txtclientnameTS", @id = "txtclientnameTS", @required = true })
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <label>Designation</label>
                                                    @Html.TextBoxFor(m => m.empdesignation, new { @class = "form-control m-b", @name = "txtdesigTS", @id = "txtdesigTS", @required = true, @readonly = true })
                                                </div>
                                                <div class="col-md-4 col-md-offset-1">
                                                    <label>Department</label>
                                                    @Html.TextBoxFor(m => m.empdepart, new { @class = "form-control m-b", @name = "txtdepartTS", @id = "txtdepartTS", @required = true, @readonly = true })
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <label>Date</label>
                                                    @Html.TextBoxFor(m => m.date, new { @class = "form-control m-b", @name = "txtdateTS", @id = "txtdateTS", @required = true, @readonly = true })
                                                </div>
                                                <div class="col-md-4 col-md-offset-1">
                                                    <label>Time</label>
                                                    @Html.TextBoxFor(m => m.time, new { @class = "form-control m-b", @name = "txttimeTS", @id = "txttimeTS", @required = true, @readonly = true })
                                                </div>
                                            </div>
                                        }
                                    }
                                    catch (Exception)
                                    {
                                        string url = "/dashboard";
                                        Response.Write("<script type='text/javascript'>");
                                        Response.Write("window.location.href = '" + url + "'</script>");
                                    }
                                }

                                <div class="row">
                                    <div class="col-md-4">
                                        @{
                                            if (ViewBag.disabletimein == true)
                                            {
                                                <input type="submit" id="btntimein" value="Time Out" class="btn btn-sm btn-danger" />
                                                <input type="submit" id="btntimeout" value="Time In" style="display:none;" class="btn btn-sm btn-success" />
                                            }
                                            else
                                            {
                                                <input type="submit" id="btntimein" value="Time Out" style="display:none;" class="btn btn-sm btn-danger" />
                                                <input type="submit" id="btntimeout" value="Time In" class="btn btn-sm btn-success" />
                                            }
                                        }
                                        
                                    </div>
                                </div>
                            </form>                                
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>