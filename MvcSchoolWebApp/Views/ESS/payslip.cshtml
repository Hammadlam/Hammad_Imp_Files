                                        </div>
                                    </div>
                                    <div class="row ">
                                        <div class="col-md-4">
                                            <div class="col-md-5">
                                                <label>From Date</label>
                                            </div>
                                            <div class="col-md-7">
                                                @Html.TextBoxFor(model => model.begdate, new { @type = "text", @class = "date-day form-control m-b", @name = "txtbegdatePS", @id = "txtbegdatePS", @requried = "true"})
                                            </div>
                                        </div>

                                        <div class="col-md-4">
                                            <div class="col-md-5">
                                                <label>To Date</label>
                                            </div>
                                            <div class="col-md-7">
                                                @Html.TextBoxFor(model => model.enddate, new { @type = "text", @class = "date-day form-control m-b", @name = "txtenddatePS", @id = "txtenddatePS", @requried = "true" })
